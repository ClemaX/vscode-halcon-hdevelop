{
  "name": "halcon-hdevelop",
  "displayName": "halcon-hdevelop",
  "description": "Edit Halcon HDevelop scripts within VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:halcon-hdevelop.helloWorld",
    "onNotebook:halcon-hdevelop"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "halcon-hdevelop.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "hdevelop",
        "aliases": ["Halcon HDevelop", "hdevelop"],
        "extensions": [""],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "hdevelop.api",
        "aliases": ["Halcon HDevelop API", "hdevelop.api"],
        "extensions": [""],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hdevelop",
        "scopeName": "source.hdevelop",
        "path": "./syntaxes/hdevelop.tmLanguage.json"
      },
      {
        "language": "hdevelop.api",
        "scopeName": "source.hdevelop.api",
        "path": "./syntaxes/hdevelop.api.tmLanguage.json"
      }
    ],
    "notebooks": [
      {
        "id": "halcon-hdevelop",
        "type": "halcon-hdevelop",
        "displayName": "Halcon HDevelop",
        "selector": [
          {
            "filenamePattern": "*.hdvp"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "fast-xml-parser": "^4.0.10",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
